<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="DayBorderBrush" Color="#FFD0D0D0"/>
            <SolidColorBrush x:Key="DayBackgroundBrush" Color="#FFF5F5F5"/>
            <SolidColorBrush x:Key="MealBorderBrush" Color="#FFE0E0E0"/>
            <SolidColorBrush x:Key="MealBackgroundBrush" Color="#FFFFFFFF"/>
            <SolidColorBrush x:Key="DayHeaderForegroundBrush" Color="#FF0066CC"/>
            <SolidColorBrush x:Key="MealNameForegroundBrush" Color="#FF000000"/>
            <SolidColorBrush x:Key="MealTypeForegroundBrush" Color="#FF666666"/>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="DayBorderBrush" Color="#FF808080"/>
            <SolidColorBrush x:Key="DayBackgroundBrush" Color="#FF3A3A3A"/>
            <SolidColorBrush x:Key="MealBorderBrush" Color="#FFAAAAAA"/>
            <SolidColorBrush x:Key="MealBackgroundBrush" Color="#FF2A2A2A"/>
            <SolidColorBrush x:Key="DayHeaderForegroundBrush" Color="#FF5FA3FF"/>
            <SolidColorBrush x:Key="MealNameForegroundBrush" Color="#FFFFFFFF"/>
            <SolidColorBrush x:Key="MealTypeForegroundBrush" Color="#FFCCCCCC"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
